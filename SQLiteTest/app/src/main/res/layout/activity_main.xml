<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/picture"
            android:alpha="0.3"
            app:tint="#77624343"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/picture"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin sinh viên"
            android:textSize="16dp"
            android:layout_gravity="center"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtHoTen"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sinh viên"
            android:background="@drawable/customer1"
            android:textSize="24dp"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbNam"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nam"
                    android:padding="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/customer1"/>
                <RadioButton
                    android:id="@+id/rbNu"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nữ"
                    android:padding="20dp"
                    android:background="@drawable/customer1"/>
            </RadioGroup>
        </LinearLayout>
        <CheckBox
            android:id="@+id/cbVB2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Văn Bằng 2"
            android:background="@drawable/picture"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    app:round="60dp"
                    android:id="@+id/pngAnh"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/avatar_nam" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <EditText
                    android:id="@+id/edtMoTa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/customer1"
                    android:hint="Mô tả"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up load"
            android:id="@+id/btnUpLoadImg"
            android:backgroundTint="#A3D8FF"/>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tạo"
                    android:id="@+id/btnTao"
                    android:backgroundTint="#A3D8FF"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xóa"
                    android:id="@+id/btnXoa"
                    android:backgroundTint="#A3D8FF"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem TT"
            android:id="@+id/btnXemTT"
            android:backgroundTint="#A3D8FF"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>