<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/customer_1"
                android:alpha="0.3"
                app:tint="#77000000"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/picture"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/imgAnh"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/picture"
                android:src="@drawable/avatar_nam"
                app:round="45dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/imgNam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/customer_1"
                android:alpha="0.8"
                app:tint="#079ADD"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/imgNu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/customer_1"
                android:alpha="0.2"
                app:tint="#FD4D89"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="110dp"
            android:layout_marginBottom="15dp">
            <Switch
                android:id="@+id/swVB2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Văn bằng 2"
                android:background="@drawable/picture"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtHoTen"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_marginLeft="110dp"
                android:text="Phan Văn Tùng"
                android:textSize="24dp"
                android:gravity="bottom"/>
            <TextView
                android:id="@+id/txtMoTa"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_marginLeft="110dp"
                android:text="Sinh viên CNTT"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>